# Server Configuration
PORT=8080
ENV=development                   # development, staging, or production
LOG_LEVEL=debug                   # debug, info, warn, error

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ecommerce
DB_USER=postgres
DB_PASSWORD=your_password
DB_SSL_MODE=disable              # disable, require, verify-full
DB_MAX_CONNECTIONS=100
DB_MAX_IDLE_CONNECTIONS=10

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration (for authentication)
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION_HOURS=24

# Odoo Integration
ODOO_URL=https://your-odoo-instance.com
ODOO_DB=your_database
ODOO_USERNAME=your_username
ODOO_PASSWORD=your_password
ODOO_API_KEY=your_api_key

# Adyen Payment Configuration
ADYEN_API_KEY=your_adyen_api_key
ADYEN_MERCHANT_ACCOUNT=your_merchant_account
ADYEN_CLIENT_KEY=your_client_key
ADYEN_ENVIRONMENT=test          # test or live
ADYEN_WEBHOOK_HMAC_KEY=your_hmac_key

# AWS Configuration (if using AWS services)
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET=your-bucket-name

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-domain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization

# Rate Limiting
RATE_LIMIT_REQUESTS=100        # requests per window
RATE_LIMIT_WINDOW=60          # window in seconds

# Monitoring
SENTRY_DSN=your_sentry_dsn    # Optional: for error tracking